 <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Название товара</th>
                <th scope="col">Цена</th>
                <th scope="col">Производитель</th>
                <th scope="col">Наличие</th>
                <th scope="col">Изображение</th>
                <th scope="col">Вид товара</th>
                <th scope="col">Скидка </th>
                <th scope="col">Описание</th>
                <th scope="col">Управление</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in ViewBag.ProductList)
                {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.PriceProduct</td>
                            <td>@item.ManufacturerProduct</td>
                            @if (@item.IsAvaliable == true)
                            { <td>Да</td> }
                            else
                            {<td>Нет</td> }
                            <td><img src="@item.FilePatch" height="50px" /></td>
                            <td>@item.TypeProdycts</td>
                            <td>@item.Discount</td>
                            <td>@item.DescriptionProduct</td>
                            <td>
                                <a href="/Product/ViewShopProduct/@item.Id">Просмотр </a>/
                                <a href="/Product/EditShopProduct/@item.Id"> Редактировать</a> /
                                <a href="/Product/DeleteShopProduct/@item.Id"> Удалить</a>
                            </td>
                        </tr> 
                }
                }
        </tbody>
 </table>

<style>
    th, td {
        text-align: center;
    }
 </style>
